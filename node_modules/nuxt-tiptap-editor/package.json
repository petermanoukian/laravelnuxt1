{
  "name": "nuxt-tiptap-editor",
  "version": "1.2.1",
  "description": "Essentials to Quickly Integrate TipTap Editor into your Nuxt App",
  "repository": "modbender/nuxt-tiptap-editor",
  "keywords": [
    "vue",
    "vue.js",
    "vue3",
    "nuxt",
    "nuxt.js",
    "nuxt3",
    "tiptap",
    "tiptap nuxt module",
    "text editor",
    "wysiwyg",
    "wysiwyg editor",
    "nuxt-tiptap",
    "nuxt-tiptap-editor",
    "nuxt editor"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@nuxt/kit": "^3.12.4",
    "@tiptap/extension-code-block-lowlight": "^2.6.2",
    "@tiptap/extension-link": "^2.6.2",
    "@tiptap/pm": "^2.6.2",
    "@tiptap/starter-kit": "^2.6.2",
    "@tiptap/vue-3": "^2.6.2",
    "lowlight": "^3.1.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.5.0",
    "@nuxt/module-builder": "^0.8.3",
    "@nuxt/schema": "^3.12.4",
    "@nuxt/test-utils": "^3.14.1",
    "@types/node": "^22.3.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.56.0",
    "nuxt": "^3.12.4",
    "typescript": "^5.5.4",
    "vitepress": "^1.3.2",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.0.29"
  },
  "resolutions": {
    "rimraf": "latest"
  },
  "overrides": {
    "rimraf": "latest"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0 ."
    ]
  },
  "scripts": {
    "dev": "nuxi dev playground",
    "build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && changelogen --release && pnpm publish && git push --follow-tags",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  }
}